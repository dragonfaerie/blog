<h1>Listing Articles</h1>
 
<%= link_to 'New article', new_article_path, class: "button" %>

<div class="container">
  <% @articles.each do |article| %>
    <div class="item">
      <p class="title"><%= article.title %></p>
      <p class="article"><%= article.text %></p>
      <%= link_to 'Show', article_path(article), class: "button" %>
      <%= link_to 'Edit', edit_article_path(article), class: "button" %>
      <%= link_to 'Destroy', article_path(article),
              method: :delete,
              data: { confirm: 'Are you sure?' }, class: "button" %>
    </div>
  <% end %>
</div>
 

<%= link_to 'Back', welcome_index_path, class: "button" %>